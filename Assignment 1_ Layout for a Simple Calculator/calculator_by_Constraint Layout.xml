<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">




        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <View
                android:id="@+id/hidden_view"
                app:layout_constraintTop_toBottomOf="@id/Text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="100dp"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/Text_view"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="\n\n9*6-12+4.4   "
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="30sp"/>

            <View
                android:id="@+id/hidden_view2"
                app:layout_constraintTop_toBottomOf="@id/Text_view"
                app:layout_constraintLeft_toRightOf="@id/view"
                app:layout_constraintRight_toLeftOf="@id/b_del"
                android:layout_width="2dp"
                android:layout_height="48dp"/>

            <View
                android:id="@+id/view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hidden_view"
                app:layout_constraintRight_toLeftOf="@id/hidden_view2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="#222222"
                android:backgroundTint="#222222"
                android:padding="10dp"
                android:layout_marginHorizontal="2dp"/>

            <Button

                android:id="@+id/b_del"
                android:layout_marginBottom="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:backgroundTint="#222222"
                android:fontFamily="monospace"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="DELETE"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="normal"
                app:cornerRadius="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="7"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="8"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="9"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#222222"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="รท"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="4"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="5"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="6"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#222222"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="ร"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="1"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="2"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="3"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#222222"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="-"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="."
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="0"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#474747"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="="
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#222222"
                android:includeFontPadding="true"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="+"
                android:textSize="48sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:cornerRadius="0dp" />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>