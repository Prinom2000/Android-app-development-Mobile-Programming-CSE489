<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Blue View -->
    <View
        android:id="@+id/viewBlue"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Red View -->
    <View
        android:id="@+id/viewRed"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#F44336"
        app:layout_constraintTop_toBottomOf="@id/viewBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewGreen"/>

    <!-- Green View -->
    <View
        android:id="@+id/viewGreen"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#8BC34A"
        app:layout_constraintTop_toBottomOf="@id/viewBlue"
        app:layout_constraintStart_toEndOf="@id/viewRed"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Orange View -->
    <View
        app:layout_constraintWidth="250dp"
        android:id="@+id/viewOrange"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/viewRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewPurple"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Purple View -->
    <View
        android:id="@+id/viewPurple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/viewGreen"
        app:layout_constraintStart_toEndOf="@id/viewOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
